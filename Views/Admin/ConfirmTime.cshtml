@model IEnumerable<Racer>


@{
    ViewData["Title"] = "Index";
}

<div>
    <h1 class="display-4">Admin area: Confirm or Delete new race time</h1>
</div>

<div>
    <a class="btn btn-primary mb-3" asp-controller="Admin" asp-action="ConfirmTime">Confirm Time</a>
    <a class="btn btn-danger mb-3" asp-controller="Admin" asp-action="Index">All Times</a>
</div>

<div class="text-center">
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th><h4>First Name</h4></th>
                <th><h4>Last Name</h4></th>
                <th><h4>Race Time (h:m:s:ms)</h4></th>
                <th><h4>Action</h4></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var r in Model)
            {
                <tr>
                    <td>@r.FirstName</td>
                    <td>@r.LastName</td>
                    <td>@r.Hours:@r.Minutes:@r.Seconds:@r.Milliseconds</td>
                    <td>
                        <div class="w-100 btn-group">
                            <a asp-controller="Admin" asp-action="ConfirmFromList" asp-route-Id="@r.RacerID" class="btn btn-primary mx-1">Confirm</a>
                            <a asp-controller="Admin" asp-action="DeleteFromList" asp-route-Id="@r.RacerID" class="btn btn-danger mx-1">Delete</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    @if (!Model.Any())
    {
        <div>
            <h5>There is no new race time entries.</h5>
        </div>
    }
</div>

